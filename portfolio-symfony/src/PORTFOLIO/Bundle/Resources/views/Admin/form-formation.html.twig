{% extends 'layout.html.twig' %}

{% block title %}Portfolio - Formations{% endblock %}

{% block content %}


<br><div class="container col-xl-6 ajout_form"><br>
    <h3 class="display-4 text-center">{{ title }}</h3><hr><br>
    <div class="container col-xl-6">
        {{ form_start(formationForm) }}
        <div class="form-group">
            {{ form_label(formationForm.formtitre, 'Intitulé de la formation' )}}
            {{ form_widget(formationForm.formtitre, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(formationForm.formsoustitre, 'Lieu de la formation' )}}
            {{ form_widget(formationForm.formsoustitre, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(formationForm.formdescription, 'Description' )}}
            {{ form_widget(formationForm.formdescription, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(formationForm.formdate, 'Année' )}}
            {{ form_widget(formationForm.formdate, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_end(formationForm) }}
    </div><br>
</div><br>


{% endblock %}