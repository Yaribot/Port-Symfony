{% extends 'layout.html.twig' %}


{% block title %}Portfolio - Formations{% endblock %}

{% block content %}
<div class="container col-xl-12"><br>
    <div class="divadmin">
        <br><h3 class="display-4 text-center">LISTE DES EXPERIENCES</h3><hr><br>
        <table class="table table-dark col-md-6 offset-md-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Employeur</th>
                    <th>Année-1</th>
                    <th>Année-1</th>
                    <th>Durée</th>
                    <th>DDescription</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for ex in experience %}
                <tr>
                    <td>{{ ex.idxp }}</td>
                    <td>{{ ex.xpemployer }}</td>
                    <td>{{ ex.xpyear1 }}</td>
                    <td>{{ ex.xpyear2 }}</td>
                    <td>{{ ex.xpfunction }}</td>
                    <td>{{ ex.xpresume }}</td>


                    
                    <td><a href="{{ path('user-experience-update', {'id': ex.idxp } ) }}" class="text text-warning"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('user-experience-delete', {'id': ex.idxp } ) }}"  onclick="return confirm('Etes-vous sur de vouloir supprimer l'experience ? ')" class="text text-danger"><i class="fas fa-trash"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="row m-4">
            <a href="{{ path('user-add-experience') }}" class="btn btn-primary offset-md-3">Ajouter une experience</a>
        </div><br>
    </div>
</div>

{% endblock %}