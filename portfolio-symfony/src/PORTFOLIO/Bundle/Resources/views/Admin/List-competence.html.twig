{% extends 'layout.html.twig' %}


{% block title %}Portfolio - Competences{% endblock %}

{% block content %}
<div class="container col-xl-12"><br>
    <div class="divadmin">
        <br><h3 class="display-4 text-center">LISTE DES COMPETENCES</h3><hr><br>
        <table class="table table-dark col-md-6 offset-md-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Technology</th>
                    <th>Level</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for cpt in competences %}
                <tr>
                    <td>{{ cpt.idcompetence }}</td>
                    <td>{{ cpt.cptechnology }}</td>
                    <td>{{ cpt.cplevel }}</td>


                    
                    <td><a href="{{ path('user-competence-update', {'id': cpt.idcompetence } ) }}" class="text text-warning"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('user-competence-delete', {'id': cpt.idcompetence } ) }}"  onclick="return confirm('Etes-vous sur de vouloir supprimer la compétence ? ')" class="text text-danger"><i class="fas fa-trash"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="row m-4">
            <a href="{{ path('user-add-competence') }}" class="btn btn-primary offset-md-3">Ajouter une compétence</a>
        </div><br>
    </div>
</div><br>

{% endblock %}