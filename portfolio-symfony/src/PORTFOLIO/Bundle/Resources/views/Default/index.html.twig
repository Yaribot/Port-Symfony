{% extends 'layout.html.twig' %}


{% block title %}Mon Portfolio - Accueil{% endblock %}




{% block javascripts %}
    <div class="imgTitle">
        <img src='../../../../../../web/photo/Decktop-bg.jpg'/>
        <div class="col-xl-12 title">
            <h2>Bienvenue sur mon Portfolio<h2> 
        </div>
    </div>
    <script src="{{ asset('../../../../../../web/js/para-img.js') }}"></script>
    {# <script src="Ton_URL"></script> #}
    <script type="text/javascript">
        $(window).scroll(function () {
            var position = $(this).scrollTop();
            $('.imgTitle img').css({ top: position / 2 });
        });

        $('.header').on('click', '', function () {
            var top = $('section').first().position().top;
            $("html, body").animate({
                scrollTop: top
            }, {
                easing: "swing", duration: 800
                });
        });  
    </script>
    
{% endblock %}

